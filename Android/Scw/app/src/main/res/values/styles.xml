    </style>

    <style name="text_BA0008_14">
        <item name="android:textColor">@color/type_BA0008</item>
        <item name="android:textSize">@dimen/textsize14</item>
    </style>
    <style name="text_BA0008_13">
        <item name="android:textColor">@color/type_BA0008</item>
        <item name="android:textSize">@dimen/textsize13</item>
    </style>

    <style name="text_BA0008_18">
        <item name="android:textColor">@color/type_BA0008</item>
        <item name="android:textSize">@dimen/textsize18</item>
    </style>

    <style name="text_666666_18">
        <item name="android:textColor">@color/type_666666</item>
