<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_height50"
        android:background="@color/co_FD713F">
        <LinearLayout
            android:id="@+id/authentication_back"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView

                android:background="@drawable/ico_back"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>

        <TextView
            android:gravity="center"
            android:text="认证"

            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/textsize18"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="right"
            android:text=""
            android:layout_marginRight="10dp"
            android:textColor="#FFFFFF"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/textsize14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:id="@+id/authertication_head"
        android:text="协议"
        android:background="#FAFAFA"
        android:textColor="@color/co_111A3B"
        android:textSize="@dimen/textsize14"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <com.commodity.scw.ui.widget.webview.CustomWebView
        android:id="@+id/customweb"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

    </com.commodity.scw.ui.widget.webview.CustomWebView>


    <Button
        android:id="@+id/authentication_confirmation"

        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_height50"
        android:layout_margin="29dp"
        android:background="@drawable/bg_btn_red"
        android:text="我已阅读并同意"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize18" />
</LinearLayout>