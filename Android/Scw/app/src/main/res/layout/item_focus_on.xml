<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_item_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/distance_12"
        android:paddingLeft="@dimen/distance_12"
        android:paddingRight="@dimen/distance_12"
        android:paddingTop="@dimen/distance_12"
        android:background="@color/type_FAFAFA">

        <TextView
            android:id="@+id/tv_text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2017-02-30 19:28:28"
            android:textColor="@color/type_666666"
            android:textSize="@dimen/textsize12"
            android:textStyle="normal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/distance_12"
        android:paddingLeft="@dimen/distance_12"
        android:paddingRight="@dimen/distance_12"
        android:paddingTop="@dimen/distance_12">

        <com.commodity.yzrsc.ui.widget.imageview.CircleImageView
            android:id="@+id/view_ico1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/mainimg1"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_8"
            android:layout_weight="1"
            android:text="会员名称"
            android:textColor="@color/co_111A3B"
            android:textSize="@dimen/textsize13" />

        <Button
            android:id="@+id/btn_huxiangguanzhu"
            android:layout_width="66dp"
            android:layout_height="22dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shap_button_tuiguang"
            android:text="互相关注"
            android:textColor="@color/co_F95F3D"
            android:textSize="@dimen/textsize13" />
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/distance_12"
        android:layout_marginRight="@dimen/distance_12"
        android:background="@color/divideline" />
</LinearLayout>