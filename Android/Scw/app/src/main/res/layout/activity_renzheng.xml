<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ren_bg"
    android:layout_height="match_parent">


<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
    <include layout="@layout/head_layout"/>
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@color/type_FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/ren_name"
            android:background="@color/type_FFFFFF"
            android:hint="真实姓名"
            android:textColor="#FFBCBCBC"
            android:textSize="16sp"
            android:textColorHint="#FFBCBCBC"
            android:paddingLeft="10dp"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:background="#E6E6E6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <EditText
            android:id="@+id/ren_person"
            android:background="@color/type_FFFFFF"
            android:hint="身份证"
            android:inputType="number"
            android:textColor="#FFBCBCBC"
            android:textSize="16sp"
            android:textColorHint="#FFBCBCBC"
            android:paddingLeft="10dp"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:background="#E6E6E6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <EditText
            android:id="@+id/ren_address"
            android:background="@color/type_FFFFFF"
            android:hint="档口地址"
            android:textColor="#FFBCBCBC"
            android:textSize="16sp"
            android:textColorHint="#FFBCBCBC"
            android:paddingLeft="10dp"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:paddingBottom="25dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:background="@color/type_FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:text="上传档口照或手持身份证照"
            android:textColor="#FF666666"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="11dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="15dp"
            android:text="（企业：营业执照电子版和档口照，个人：身份证正面照和手持身
份证照）"
            android:textColor="#FF999999"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.commodity.yzrsc.ui.widget.specialview.MyGridView
            android:id="@+id/ren_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            >

        </com.commodity.yzrsc.ui.widget.specialview.MyGridView>
    </LinearLayout>
    <Button
        android:id="@+id/ren_submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_btn_red"
        android:text="提交材料"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize18" />

</LinearLayout>
    <View
        android:visibility="gone"
        android:id="@+id/bg"
        android:background="#77777777"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>