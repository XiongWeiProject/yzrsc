<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">

    <com.commodity.scw.ui.widget.scrollView.DampingScrollView
        android:id="@+id/alter_b"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/head_layout"/>
            <LinearLayout
                android:background="@color/type_FFFFFF"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/alter_desc"
                    android:background="@drawable/icon_transparent"
                    android:hint="描述您的宝贝…"
                    android:textColorHint="@color/co_111A3B"
                    android:textColor="@color/co_111A3B"
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.commodity.scw.ui.widget.specialview.MyGridView
                    android:numColumns="4"
                    android:paddingLeft="19dp"
                    android:layout_marginTop="10dp"
                    android:listSelector="@drawable/icon_transparent"
                    android:id="@+id/alter_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.commodity.scw.ui.widget.specialview.MyGridView>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="12dp"
                android:background="@color/type_FFFFFF"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text=""

                    android:layout_marginLeft="25dp"
                    style="@style/text_BA0008_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="合作价"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    style="@style/text_111A38_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/alter_price"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/icon_transparent"
                    android:hint=""
                    android:textColor="@color/co_111A3B"
                    android:textColorHint="@color/co_111A3B"
                    android:digits="0123456789."
                    android:inputType="number"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="元"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    style="@style/text_111A38_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="12dp"
                android:background="@color/type_FFFFFF"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text=""

                    android:layout_marginLeft="25dp"
                    style="@style/text_BA0008_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="货号"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    style="@style/text_111A38_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/alter_goodid"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/icon_transparent"
                    android:hint=""
                    android:textColor="@color/co_111A3B"
                    android:textColorHint="@color/co_111A3B"
                    android:digits="0123456789."
                    android:inputType="number"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text=""
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    style="@style/text_111A38_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
    </com.commodity.scw.ui.widget.scrollView.DampingScrollView>
    <View
        android:id="@+id/alter_bg"
        android:visibility="gone"
        android:background="#77777777"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>