<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/item_content"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/zhaunshoumanager_time2"
            android:layout_marginLeft="10dp"
            android:text="2017-3-30 12:12:12"
            android:textSize="@dimen/textsize12"
            android:textColor="#756F73"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/zhaunshoumanager_state2"
            android:padding="10dp"
            android:gravity="right"
            android:layout_gravity="right"
            android:text="订单已提交"
            android:textSize="@dimen/textsize14"
            android:textColor="#BA0008"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:singleLine="true"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <com.commodity.yzrsc.ui.widget.NoTouchRecyclerView
        android:id="@+id/rcv_oder_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.commodity.yzrsc.ui.widget.NoTouchRecyclerView>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="@dimen/textsize10"
                android:textColor="@color/co_111A3B"
                android:textSize="@dimen/textsize14"
                android:text="合计："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/zhaunshoumanager_price2"
                android:textColor="@color/co_111A3B"
                android:textSize="@dimen/textsize12"
                android:text="￥1990"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_linear2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/yuan"
                android:layout_margin="@dimen/textsize10"
                android:textColor="@color/co_111A3B"
                android:textSize="@dimen/textsize14"
                android:text="商品原价："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/zhaunshoumanager_yuanjia2"
                android:textColor="@color/co_111A3B"
                android:textSize="@dimen/textsize12"
                android:text="￥19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_linera1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/li"
                android:layout_margin="@dimen/textsize10"
                android:textColor="@color/co_F95F3D"
                android:textSize="@dimen/textsize14"
                android:text="预计利润："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/zhaunshoumanager_yuji2"
                android:textColor="@color/co_F95F3D"
                android:textSize="@dimen/textsize12"
                android:text="￥1990"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:layout_marginLeft="170dp"
            android:visibility="gone"
            android:id="@+id/item_button_seewuliu"
            android:text="查看物流"
            style="@style/text_BA0008_13"
            android:layout_marginRight="20dp"
            android:background="@drawable/shap_button_red_backage"
            android:layout_gravity="center_vertical"
            android:layout_width="76dp"
            android:layout_height="26dp" />
    </LinearLayout>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_line_xuxian"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>