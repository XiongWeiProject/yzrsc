<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/type_FFFFFF"
    android:layout_height="match_parent">
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cancle_button"
            android:text="取消"
            android:textColor="#FF111A3B"
            android:paddingBottom="12dp"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/number_share"
            android:text=""
            android:paddingBottom="12dp"
            android:layout_gravity="center"
            android:textColor="#FF3C3636"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>
    <ImageView
        android:id="@+id/image_share"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <LinearLayout
        android:id="@+id/shar_qq"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/select_button_backage"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/frind_I"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/u_qq" />

        <TextView
            android:id="@+id/frind_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="发送给好友"
            android:textColor="@color/co_111A3B"
            android:textSize="@dimen/textsize14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text=""
            android:textColor="#999999"
            android:textSize="@dimen/textsize12" />

        <ImageView
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/ioc_user_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shar_weixin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/select_button_backage"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_weixin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/u_space" />

        <TextView
            android:id="@+id/content_weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="发送给好友"
            android:textColor="@color/co_111A3B"
            android:textSize="@dimen/textsize14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text=""
            android:textColor="#999999"
            android:textSize="@dimen/textsize12" />

        <ImageView
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/ioc_user_right" />
    </LinearLayout>



</LinearLayout>