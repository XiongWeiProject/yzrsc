<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_item_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/distance_12"
        android:paddingLeft="@dimen/distance_12"
        android:paddingRight="@dimen/distance_12"
        android:paddingTop="@dimen/distance_12">

        <com.commodity.yzrsc.ui.widget.imageview.CircleImageView
            android:id="@+id/view_ico1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ico_defalut_header"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_8"
            android:layout_weight="1"
            android:text="会员名称"
            android:textColor="@color/co_FD713F"
            android:textSize="@dimen/textsize13" />

        <TextView
            android:id="@+id/tv_text2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="19:14"
            android:textColor="@color/type_666666"
            android:textSize="12sp" />

        <View
            android:id="@+id/view_ico2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ioc_user_right" />
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/distance_12"
        android:layout_marginRight="@dimen/distance_12"
        android:background="@color/divideline" />
</LinearLayout>