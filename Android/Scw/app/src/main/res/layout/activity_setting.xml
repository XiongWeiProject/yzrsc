<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/co_FD713F">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="back"
            android:padding="14dp"
            android:src="@drawable/ico_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:gravity="center"
            android:text="系统设置"
            android:textColor="@color/white"
            android:textSize="@dimen/titlebar_textsize" />

        <TextView
            android:id="@+id/tv_rightbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:padding="@dimen/distance_16"
            android:text=" "
            android:textColor="@color/white"
            android:textSize="@dimen/textsize14" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_btn_about"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/distance_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_16"
            android:text="关于文巴掌商城"
            android:textColor="@color/co_FD713F"
            android:textSize="@dimen/textsize14" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:id="@+id/view" />

        <TextView
            android:id="@+id/tv_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/distance_16"
            android:text="版本1.0"
            android:textColor="@color/co_FD713F"
            android:textSize="@dimen/textsize14" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_outlogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_height50"
        android:layout_marginLeft="@dimen/distance_24"
        android:layout_marginRight="@dimen/distance_24"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_btn_red"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize18" />
</LinearLayout>