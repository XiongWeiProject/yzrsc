<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/co_FD713F"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_height50"
        android:background="@color/co_FD713F"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/type_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ico_back" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/type_serach"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/distance_32"
            android:layout_marginRight="55dp"
            android:background="@drawable/bg_search_banyuanjiao"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/distance_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ico_search"
                android:drawablePadding="@dimen/distance_8"
                android:text="搜索商品名称"
                android:textColor="#88FFFFFF"
                android:textSize="@dimen/textsize14" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/type_FAFAFA"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/activity_linear1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_titale1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="分类"
                android:textColor="@color/type_3C3636"
                android:textSize="@dimen/textsize16" />

            <ImageView
                android:id="@+id/activity_image1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:padding="4dp"
                android:src="@drawable/jtdown_gray" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#CED0D7" />

        <LinearLayout
            android:id="@+id/activity_linear2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_titale2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="智能排序"
                android:singleLine="true"
                android:maxEms="4"
                android:ellipsize="end"
                android:textColor="@color/type_3C3636"
                android:textSize="@dimen/textsize16" />

            <ImageView
                android:id="@+id/activity_image2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:padding="4dp"
                android:src="@drawable/jtdown_gray" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#CED0D7" />

        <LinearLayout

            android:id="@+id/activity_linear3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_titale3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="筛选"
                android:textColor="@color/type_3C3636"
                android:textSize="@dimen/textsize16" />

            <ImageView
                android:id="@+id/activity_image3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:padding="4dp"
                android:src="@drawable/jtdown_gray" />
        </LinearLayout>
    </LinearLayout>
