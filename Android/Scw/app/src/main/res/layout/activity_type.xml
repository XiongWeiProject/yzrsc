    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.commodity.scw.ui.widget.xlistView.XListView xmlns:pla="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_xlistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/type_9F9F9"
            android:listSelector="@android:color/transparent"
            android:fastScrollEnabled="true"
            android:scrollbars="vertical"
            pla:plaColumnNumber="1"
            pla:plaLandscapeColumnNumber="1">

        </com.commodity.scw.ui.widget.xlistView.XListView>

        <com.commodity.scw.ui.widget.textview.CenterDrawableTextView
            android:id="@+id/tv_nodata"
            style="@style/nodata_style"
            android:background="@color/white"
            android:visibility="gone" />
        <FrameLayout
            android:id="@+id/type_popup_zhong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/type_linearlayouy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#77000000"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_fenli"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/item_type_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="155"
                    android:background="@color/background"
                    android:divider="@drawable/icon_transparent"
                    android:dividerHeight="1dp"></ListView>

                <ListView
                    android:id="@+id/item_type_result"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="220"
                    android:background="@color/background"
                    android:divider="@drawable/icon_transparent"
                    android:dividerHeight="1dp"></ListView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_paixu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/list_item_paixu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/icon_transparent"
                    android:dividerHeight="1dp">

                </ListView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_jiage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="价格"
                    android:textColor="@color/co_111A3B"
                    android:textSize="@dimen/textsize14" />

                <GridView
                    android:id="@+id/type_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:numColumns="4">

                </GridView>

            </LinearLayout>
        </FrameLayout>


    </FrameLayout>

</LinearLayout>