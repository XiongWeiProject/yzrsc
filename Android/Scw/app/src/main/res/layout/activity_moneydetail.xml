<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
    <include layout="@layout/head_layout"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/backage_detial"
            android:visibility="invisible"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/icon_data_no"
                android:layout_marginTop="99dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center_horizontal"
                android:text="暂无数据"
                android:textColor="#FF666666"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <com.commodity.scw.ui.widget.xlistView.XListView xmlns:pla="http://schemas.android.com/apk/res-auto"
            android:id="@+id/moneydetail_listview"
            android:dividerHeight="0dp"
            android:divider="@null"
            android:listSelector="@drawable/icon_transparent"
            android:layout_width="match_parent"
            pla:plaColumnNumber="1"
            pla:plaLandscapeColumnNumber="1"
            android:layout_height="match_parent">

        </com.commodity.scw.ui.widget.xlistView.XListView>
    </FrameLayout>


</LinearLayout>