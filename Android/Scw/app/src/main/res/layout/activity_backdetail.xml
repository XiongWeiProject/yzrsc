<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
    <include layout="@layout/head_layout"/>

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/backmoney_serion"
        android:gravity="center_vertical"
        android:background="@color/type_FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="退款原因"
            style="@style/text_666666_14"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/back_serson"
            android:text=""
            style="@style/text_111A38_14"
            android:layout_marginLeft="28dp"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="9dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="18dp"
            android:layout_width="24dp"
            android:background="@drawable/jtdown_gray"
            android:layout_height="24dp" />
    </LinearLayout>
    <ListView
        android:id="@+id/back_listview"
        android:dividerHeight="1dp"
        android:divider="@drawable/icon_transparent"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

    </ListView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/break_confrim"
            android:layout_width="76dp"
            android:layout_height="26dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="21dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="@dimen/ll_height50"
            android:background="@drawable/bg_btn_red"
            android:text="同意退款"
            android:textColor="#FFFFFFFF"
            android:textSize="14sp" />
        <Button
            android:id="@+id/break_cancle"
            android:layout_width="76dp"
            android:layout_height="26dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="@dimen/ll_height50"
            android:background="@drawable/bg_btn_red"
            android:text="拒绝退款"
            android:textColor="#FFFFFFFF"
            android:textSize="14sp" />
        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/break_dialog"
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="@dimen/ll_height50"
            android:background="@drawable/shap_button_more"
            android:text="发表留言凭证"
            android:textColor="#FF111A3B"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>