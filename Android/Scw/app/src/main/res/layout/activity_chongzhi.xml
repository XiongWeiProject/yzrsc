<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
    <include layout="@layout/head_layout"/>
    <TextView
        android:id="@+id/confirm_text_phone"
        android:gravity="center"
        android:text="设定金额，充值到钱包"
        android:textColor="#3C3636"
        android:textSize="20sp"
        android:paddingTop="20dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:background="@color/type_FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/type_FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/chongzhi_50"
            android:text="50"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:background="@color/type_BA0008"
            android:layout_height="80dp" />
        <TextView
            android:id="@+id/chongzhi_100"
            android:text="100"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white_half"
            android:layout_height="80dp" />
        <TextView
            android:id="@+id/chongzhi_200"
            android:text="200"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:background="@color/white_half"
            android:layout_height="80dp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/type_FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/chongzhi_500"
            android:text="500"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:background="@color/white_half"
            android:layout_height="80dp" />
        <TextView
            android:id="@+id/chongzhi_1000"
            android:text="1000"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white_half"
            android:layout_height="80dp" />
        <TextView
            android:id="@+id/chongzhi_2000"
            android:text="2000"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:background="@color/white_half"
            android:layout_height="80dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#E6E6E6" />

    <EditText
        android:id="@+id/chongzhi_other"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_height50"
        android:layout_marginLeft="@dimen/distance_24"
        android:layout_marginRight="@dimen/distance_24"
        android:background="@color/white_half"
        android:hint="最低1，最高100000"
        android:inputType="number"
        android:text = "自定义金额"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize18" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_height50"
        android:layout_marginLeft="@dimen/distance_24"
        android:layout_marginRight="@dimen/distance_24"
        android:background="@color/blue"
        android:text="立即支付"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize18" />

</LinearLayout>