<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
    <include layout="@layout/head_layout"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/type_FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="18dp"
            android:text="订单已提交"
            android:textColor="#FF111A38"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/pay_time"
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余支付时间23小时50分26秒，超时将取消订单"
            android:textColor="#FF111A38"
            android:textSize="12sp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="合计："
                android:textColor="#FF111A3B"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pay_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 1920"
                android:textColor="#FFBA0008"
                android:textSize="18sp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/pay_weixin_button"
        android:background="@color/type_FFFFFF"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/icon_weixin"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="10dp"
            android:layout_width="28dp"
            android:layout_height="28dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信支付"
            android:textColor="#FF111A38"
            android:textSize="16sp"
            android:layout_marginLeft="12dp"
            />
        <View
            android:background="#00ffffff"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>
        <ImageView
            android:id="@+id/pay_weixin_img"
            android:background="@drawable/icon_xzoff"
            android:layout_marginRight="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pay_zfb_button"
        android:layout_marginTop="1dp"
        android:background="@color/type_FFFFFF"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/icon_zfb"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="10dp"
            android:layout_width="28dp"
            android:layout_height="28dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝支付"
            android:textColor="#FF111A38"
            android:textSize="16sp"
            android:layout_marginLeft="12dp"
            />
        <View
            android:background="#00ffffff"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>
        <ImageView
            android:id="@+id/pay_zfb_img"
            android:background="@drawable/icon_xzon"
            android:layout_marginRight="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pay_qianbao_line"
        android:layout_marginTop="1dp"
        android:background="@color/type_FFFFFF"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/card"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="10dp"
            android:layout_width="28dp"
            android:layout_height="28dp" />
        <TextView
            android:id="@+id/momey_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钱包余额（￥10）"
            android:textColor="#FF111A38"
            android:textSize="16sp"
            android:layout_marginLeft="12dp"
            />
        <View
            android:background="#00ffffff"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>
        <ImageView
            android:id="@+id/pay_qianbao_img"
            android:background="@drawable/icon_xzon"
            android:layout_marginRight="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="11dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="由本平台进行担保交易，您在确认收货后，卖家才能收到货款，请放心购买。"
        android:textColor="#FF999999"
        android:textSize="10sp"
        />
    <LinearLayout
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button

            android:id="@+id/pay_pay_button"
            android:layout_width="315dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_btn_red"
            android:text="确认支付"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize18" />
    </LinearLayout>

</LinearLayout>