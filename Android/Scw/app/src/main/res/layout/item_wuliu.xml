<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="@color/type_FFFFFF"
    android:layout_height="match_parent">
    <com.commodity.scw.ui.widget.layout.CircularView
        android:id="@+id/view_line"
        android:layout_width="50dp"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/wuliu_oval"
        android:background="@drawable/shap_wuliu_read"
        android:layout_width="16dp"
        android:layout_marginLeft="23dp"
        android:layout_height="16dp" />
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/wuliu_oval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/wuliu_time"
            style="@style/text_666666_16"
            android:text="2017-02-24 09:41:44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/wuliu_content"
            style="@style/text_666666_16"
            android:layout_marginTop="10dp"
            android:text="您的订单已提交工厂处理，等待打包"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/wuliu_compoin"
            style="@style/text_666666_16"
            android:layout_marginTop="10dp"
            android:text="物流公司：韵达快递"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/wuliu_waybill"
            style="@style/text_666666_16"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="物流单号：123456789"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>