<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/zhaunshoumanager_time"
            android:layout_marginLeft="10dp"
            android:text="2017-3-30 12:12:12"
            android:textSize="@dimen/textsize12"
            android:textColor="#756F73"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/zhaunshoumanager_state"
            android:padding="10dp"
            android:gravity="right"
            android:layout_gravity="right"
            android:text="订单已提交"
            android:textSize="@dimen/textsize14"
            android:textColor="#BA0008"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:singleLine="true"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.commodity.scw.ui.widget.imageview.XCRoundRectImageView
            android:id="@+id/zhaunshoumanager_imag"
            android:layout_margin="10dp"
            android:background="@drawable/mainimg1"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/zhaunshoumanager_content"
            android:text="新春局限新春局限新春局限新春局限新春局限新春局限新春局限新春局限新春局限新春局限新春局限新春局限新春局限"
            android:textColor="@color/co_111A3B"
            android:textSize="@dimen/textsize13"
            android:paddingTop="11dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="@dimen/textsize10"
                android:textColor="@color/co_111A3B"
                android:textSize="@dimen/textsize14"
                android:text="合计："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/zhaunshoumanager_price"
                android:textColor="@color/co_111A3B"
                android:textSize="@dimen/textsize12"
                android:text="￥1990"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="@dimen/textsize10"
                android:textColor="@color/co_111A3B"
                android:textSize="@dimen/textsize14"
                android:text="商品原价："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/zhaunshoumanager_yuanjia"
                android:textColor="@color/co_111A3B"
                android:textSize="@dimen/textsize12"
                android:text="￥19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="@dimen/textsize10"
                android:textColor="@color/co_F95F3D"
                android:textSize="@dimen/textsize14"
                android:text="预计利润："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/zhaunshoumanager_yuji"
                android:textColor="@color/co_F95F3D"
                android:textSize="@dimen/textsize12"
                android:text="￥1990"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_line_xuxian"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>